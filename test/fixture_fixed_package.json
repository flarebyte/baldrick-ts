{
  "name": "scratchbook",
  "description": "Scratchbook is an annotation library written in Typescript that makes it easy to write documentation in a decentralized fashion",
  "keywords": [
    "annotations",
    "typescript",
    "documentation"
  ],
  "author": {
    "name": "Olivier Huin",
    "url": "https://github.com/olih"
  },
  "version": "0.4.1",
  "license": "MIT",
  "homepage": "https://github.com/mycompany/scratchbook",
  "repository": {
    "type": "git",
    "url": "https://github.com/mycompany/scratchbook.git"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "test:cov": "tsdx test --coverage",
    "watch": "tsdx watch",
    "lint": "tsdx lint src test",
    "fix": "tsdx lint src test --fix",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "docs": "typedoc",
    "fix:main": "prettier --write *.md *.json .github/workflows/*.yml",
    "ready": "yarn fix;yarn fix:main;yarn lint;yarn test:cov;yarn build;yarn size;yarn docs",
    "preversion": "yarn lint;yarn test:cov;yarn size;",
    "postversion": "git push --tags"
  },
  "module": "dist/scratchbook.esm.js",
  "dependencies": {},
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.1",
    "husky": "^7.0.0",
    "size-limit": "^5.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typedoc": "^0.21.2",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {}
}